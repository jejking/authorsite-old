<%@taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>
<!DOCTYPE html
PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<?xml version="1.0" encoding="UTF-8"?>
<html>
    <head>
        <title>${requestScope.pageTitle}</title>
        <c:url value="css/main.css" var="main-css" />
        <link rel="stylesheet" type="text/css" href="${main-css}"/>
        <c:if test="${!empty pageScope.extraCss}">
            <c:url value="css/${pageScope.extraCss}" var="extra-css"/>
            <link rel="stylesheet" type="text/css" href="${extra-css}"/>
        </c:if>
    </head>
    <body>
    <div id="header">
            <div id="title">
                <h1>${initParam.siteName}</h1>
            </div>
            <div id="search">
                <div id="search-text">
                    <fmt:bundle basename="org.authorsite.web.resources.standard">
                        <fmt:message key="search"/>
                    </fmt:bundle>
                </div>
                <form id="header-search" action="/search" method="post">
                    <div id="search-box">
                        <input type="text" id="header-search-term" value="" size="25" />
                        <c:url value="img/tango/system-search.png" var="search-image"/>
                        <input type="image" name="submit" id="header-search-button" src="${search-image}"/>
                    </div>
                </form>
            </div>
        </div>
        <div id="centre">