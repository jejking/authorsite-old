<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    
    <display-name>Authorsite Web Application</display-name>
    
    <context-param>
        <param-name>siteName</param-name>
        <param-value>authorsite.org</param-value>
    </context-param>
    
    <!-- defines where the main spring application context is defined -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    
    
    <servlet>
        <servlet-name>ErrorServlet</servlet-name>
        <servlet-class>org.authorsite.web.error.ErrorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ErrorServlet</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>400</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>402</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>406</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>407</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>408</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>409</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>410</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>411</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>412</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>413</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>414</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>415</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>416</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>417</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>501</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>502</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>503</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>504</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <error-code>505</error-code>
        <location>/error</location>
    </error-page>
    
    <!-- loads up the main spring application context -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    
    
    <!-- spring MVC -->
    
    <servlet>
        <servlet-name>spring-dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>spring-dispatcher</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>spring-dispatcher</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>spring-dispatcher</servlet-name>
        <url-pattern>/edit/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>spring-dispatcher</servlet-name>
        <url-pattern>/people/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>spring-dispatcher</servlet-name>
        <url-pattern>/works/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>spring-dispatcher</servlet-name>
        <url-pattern>/mail/*</url-pattern>
    </servlet-mapping>
    
    <!-- end spring MVC -->
    
    <security-constraint>
        <display-name>NoDirectJspInvocation</display-name>
        <web-resource-collection>
            <web-resource-name>Jsps</web-resource-name>
            <description/>
            <url-pattern>/jsp/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <!-- no role is allowed to invoke a jsp directly -->
        <auth-constraint/>
    </security-constraint>
    <security-constraint>
        <display-name>No direct error servlet invocation</display-name>
        <web-resource-collection>
            <web-resource-name>Error Servlet</web-resource-name>
            <description/>
            <url-pattern>/error</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>
    
</web-app>
